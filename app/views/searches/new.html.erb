<h1 class="adv-title">Advanced Search</h1>

<%= form_for [@user, @search] do |s| %>

  <div class="field">
    <%= s.label :keywords %><br>
    <%= s.text_field :keywords %>
  </div>

  <br>
  <% if current_user.admin? %>
    <div class="field">
      <%= s.label :user %><br>
      <%= s.collection_select :name, @users, :name, :name %>
    </div>
  <% end %>

  <div class="field">
    <%= s.label :media %><br>
    <%= s.select :media, options_for_select(@media), :include_blank => true %>
  </div>

  <div class="field">
    <%= s.label :publisher %><br>
    <%= s.select :publisher, options_for_select(@publishers.compact.sort), :include_blank => true %>
  </div>

  <div class="field">
    <p><%= s.label :year %> - <%= s.text_field :year, size: 10 %></p>
  </div>

  <div class="field">
    <p><%= s.label :min_price, "Min Price" %> - <%= s.text_field :min_price, size: 10 %></p>
    <p><%= s.label :max_price, "Max Price" %> - <%= s.text_field :max_price, size: 10 %></p>
  </div>

  <div class="field">
    <%= s.label :condition %>
    <%= s.select :condition, options_for_select(@conditions), :include_blank => true %>
  </div>
  <br>
  <div>
    <%= s.submit "Search" %>
  </div>
<% end %>
<br>
<div>
  <%= link_to user_collectibles_path(current_user), :class => "btn btn-primary btn-md" do %>
  	Back
  <% end %>
</div>
